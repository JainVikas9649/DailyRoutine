<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme (default) -->
    <style name="Theme.DailyRoutine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Navigation icon tint -->
        <item name="colorControlNormal">@color/nav_icon_light</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/pink_light</item>
    </style>
</resources>