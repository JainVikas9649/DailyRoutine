<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/nav_header_gradient"
    android:gravity="bottom">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/nav_header_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile_avatar"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/nav_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey, Vikas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold" />

    <TextView
        android:id="@+id/textMoneyTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart spending leads to wealth"
        android:textSize="14sp"
        android:textColor="@color/white_80"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="4dp" />

</LinearLayout>
