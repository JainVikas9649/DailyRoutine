<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFF8E1"/> <!-- Light yellow -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FFC107"/> <!-- Amber border -->

    <!-- Padding inside shape (optional) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>